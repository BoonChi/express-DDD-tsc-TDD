{
  "name": "backend",
  "version": "1.0.0",
  "description": "e-commerce backend using Domain driven concept DDD and typescript",
  "scripts": {
    "dev": "NODE_ENV=development node-dev",
    "start": "node-dev -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "build": "tsc --project ./",
    "dev:test": "NODE_ENV=test jest --watch --detectOpenHandles",
    "test": "NODE_ENV=test jest",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.{js,ts,tsx,json,md,mdx}\"",
    "lint": "eslint \"./**/*.ts\"",
    "format": "npm run lint && npm run prettier"
  },
  "pre-commit": [
    "format"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "jest": "^27.4.7",
    "mongoose": "^6.2.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.4",
    "eslint": "^8.8.0",
    "mongodb-memory-server": "^8.3.0",
    "node-dev": "^7.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "winston": "^3.5.1"
  }
}
